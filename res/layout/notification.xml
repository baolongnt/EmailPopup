<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="300dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <ImageView
        android:id="@+id/divider"
        android:src="@android:drawable/divider_horizontal_dark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
    />
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notification_area"
        android:layout_below="@+id/divider"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        >
        <ImageView
            android:id="@+id/sender_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:maxHeight="96px"
            android:maxWidth="96px"
            android:src="@+drawable/ic_contact_picture_3"
        />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/from_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/sender_photo"
            android:ellipsize="end"
            android:singleLine="true"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/from_email"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/from_name"
            android:layout_toRightOf="@+id/sender_photo"
            android:ellipsize="end"
            android:singleLine="true"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subject"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/from_email"
            android:layout_toRightOf="@+id/sender_photo"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            />
    </RelativeLayout>
</RelativeLayout>

