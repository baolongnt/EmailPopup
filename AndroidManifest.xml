<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.blntsoft.emailpopup"
      android:versionCode="2"
      android:versionName="0.1.1">
    <uses-sdk android:minSdkVersion="3"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <application 
        android:label="@string/app_name"
        android:icon="@drawable/icon">
        <activity android:name=".Preferences"
                  android:icon="@drawable/icon"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Main">
        </activity>
        <activity 
            android:name=".EmailNotification"
            android:icon="@drawable/icon"
            android:theme="@android:style/Theme.Dialog" >
            <intent-filter>
                <action android:name="com.blntsoft.emailpopup.intent.action.VIEW" />
                <data
                    android:scheme="email"
                    android:host="messages"
                />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <receiver android:name=".EmailReceiver">
            <intent-filter>
                <action android:name="com.android.email.intent.action.EMAIL_RECEIVED" />
                <data
                    android:scheme="email"
                    android:host="messages"
                />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
        <service
            android:name=".EmailPopupService"
            android:enabled="true"
            >
        </service>
    </application>
</manifest> 
